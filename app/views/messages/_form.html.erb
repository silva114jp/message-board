<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
        <li>
          <%= full_message %>
        </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <label for="message_name" class="col-sm-2 control-label">名前：</label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", placeholder: "名前を入力"%>
    </div>
  </div>
  <div class="form-group">
    <label for="message_text" class="col-sm-2 control-label">内容：</label>
    <div class="col-sm-10">
      <%= f.text_area :body, class: "form-control", placeholder: "内容を入力", cols:"30" %>
    </div>
  </div>
  <div class="form-group">
    <label for="message_age" class="col-sm-2 control-label">年齢：</label>
    <div class="col-sm-4">
      <%= f.text_field :age, class: "form-control", placeholder: "年齢を入力" %>
    </div>
    <div class="col-sm-6 hidden-sm"></div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-sm btn-primary" %>
    </div>
  </div>
<% end %>